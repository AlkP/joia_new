<%= link_to "Новая статья", new_story_path %>
<div class="dd" id="nestable">
  <ol class="dd-list">
  <% unless @news.nil? %>
    <% @news.each do |n| %>
        <li class="dd-item" data-id="<%= n.id %>">
          <div class="dd-handle dd3-handle">Drag</div>
          <div class="dd3-content">
            <div class="percent-90"><%= link_to n.title, story_path(n) %></div>
            <div class="percent-5"><a data-confirm="Вы действительно хотите удалить новость?" data-method="delete" href="<%= story_path(n.id) %>" rel="nofollow">[X]</a></div>
          </div>
        </li>
    <% end %>
  <% end %>
  </ol>
</div>

<script>
  $('#nestable').nestable({
    group: 1,
    maxDepth: 1
  })
    .on('change', updateSortingStory);
</script>