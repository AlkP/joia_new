
<%= form_for @color do |c| %>
  <%= c.label :"Наименование " %><%= c.text_field :name %>
  <%= c.label :"Наименование ENG" %><%= c.text_field :name_eng %>
  <%= c.label :"Крепкий алкоголь " %><%= c.check_box :hard_liquor %>
  <%= c.label :"Фото логотипа" %><%= c.file_field :logo %>
  <%= c.submit value: "Сохранить" %>
<% end %>
