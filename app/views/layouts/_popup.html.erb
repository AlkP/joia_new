<% if check_teenager(controller_name) %>
  <div class="popup" id="popup">
    <div class="popup__content">
      <i class="popup__content__logo"></i>
      <h1>Вам уже исполнилось 18 лет?</h1>
      <form>
        <p class="popup__content__yes">
          <label for="yes">Да</label><input type="radio" name="yes_no" id="yes">
        </p>
        <script>
          $('.popup__content__yes').click( function() {
            var request = $.ajax({
              url: "/filter/<%= controller_name %>/apply",
              type: "get",
              dataType: "script"
            });
          })
        </script>
        <p class="popup__content__no">
          <label for="no">Нет</label><input type="radio" name="yes_no" id="no" value="http://www.fsrar.ru/legalacts/base/zakony">
        </p>
      </form>
    </div>
  </div>
<% end %>
