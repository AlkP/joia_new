<% @regions.each do |r| %>
  <li class="dd-item" data-id="<%= r.id %>">
    <div class="dd-handle dd3-handle">Drag</div>
    <div class="dd3-content">
      <div class="percent-90"><% if r.name.length > 30 %><%= r.name[0..30] %>...<% else %><%= r.name %><% end %></div>
      <div class="percent-5"><a class="editBtnRegion" id="<%= r.id %>" href="javascript:void(0)"><i class="pen"></i></a></div>
      <div class="percent-5"><a data-confirm="Вы действительно хотите удалить регион?" data-method="delete" data-remote="true" href="/regions/<%= r.id %>" rel="nofollow">[X]</a></div>
    </div>
  </li>
<% end %>